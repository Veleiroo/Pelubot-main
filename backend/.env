# Desarrollo local (backend)

# Clave para endpoints protegidos (en dev puedes activar ALLOW_LOCAL_NO_AUTH)
API_KEY=changeme
ALLOW_LOCAL_NO_AUTH=true

# Zona horaria
TZ=Europe/Madrid

# Google Calendar (elige uno)
# OAuth de usuario (ruta relativa al backend/)
GOOGLE_OAUTH_JSON=oauth_tokens.json
# Service Account (opcional)
# GOOGLE_SERVICE_ACCOUNT_JSON=/ruta/a/service_account.json
# GOOGLE_IMPERSONATE_EMAIL=usuario@dominio

# Calendarios
GCAL_CALENDAR_ID=pelubot.test@gmail.com

# Flags
USE_GCAL_BUSY=true
AUTO_SYNC_FROM_GCAL=false
AUTO_SYNC_FROM_GCAL_DAYS=7

# Base de datos (SQLite por defecto)
DATABASE_URL=sqlite:///data/pelubot.db

