# Backend – credenciales / configuración (rellenar vía Codespaces Secrets)
# Autenticación API
# Define un valor único; la app rechaza 'changeme' y valores vacíos.
API_KEY=
# Si necesitas permitir reservas públicas desde el frontend, establece a 'true'.
# En caso contrario déjalo en 'false' para exigir API key en todos los endpoints sensibles.
PUBLIC_RESERVATIONS_ENABLED=false

# CORS
ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Zona horaria
TZ=Europe/Madrid

# Base de datos (por defecto SQLite)
DATABASE_URL=

# Google Calendar (elige OAuth o Service Account)
GOOGLE_OAUTH_JSON=
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_IMPERSONATE_EMAIL=

# Calendarios
GCAL_CALENDAR_ID=
GCAL_TEST_CALENDAR_ID=

# Sincronización
AUTO_SYNC_FROM_GCAL=false
AUTO_SYNC_FROM_GCAL_DAYS=7
DEFAULT_SERVICE_FOR_SYNC=corte
USE_GCAL_BUSY=true
PELUBOT_FAKE_GCAL=0

# Portal de profesionales
# Se requiere un secreto dedicado para firmar sesiones.
PRO_PORTAL_SECRET=
STYLIST_SESSION_COOKIE=pro_session

# Desarrollo local (opcional)
# Este flag sólo se respeta en entornos locales.
ALLOW_LOCAL_NO_AUTH=false

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000
VITE_ENABLE_DEBUG=
