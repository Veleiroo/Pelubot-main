# Backend – credenciales / configuración (rellenar vía Codespaces Secrets)
# Autenticación API
API_KEY=

# CORS
ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Zona horaria
TZ=Europe/Madrid

# Base de datos (por defecto SQLite)
DATABASE_URL=

# Google Calendar (elige OAuth o Service Account)
GOOGLE_OAUTH_JSON=
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_IMPERSONATE_EMAIL=

# Calendarios
GCAL_CALENDAR_ID=
GCAL_TEST_CALENDAR_ID=

# Sincronización
AUTO_SYNC_FROM_GCAL=false
AUTO_SYNC_FROM_GCAL_DAYS=7
DEFAULT_SERVICE_FOR_SYNC=corte
USE_GCAL_BUSY=true
PELUBOT_FAKE_GCAL=0

# Desarrollo local (opcional)
ALLOW_LOCAL_NO_AUTH=false

# Mensajería (opcional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=
TELEGRAM_BOT_TOKEN=

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_KEY=
VITE_ENABLE_DEBUG=true

